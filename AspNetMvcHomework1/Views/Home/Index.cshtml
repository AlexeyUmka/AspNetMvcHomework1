@using AspNetMvcHomework1.Helpers
@model AspNetMvcHomework1.Models.Pagination.IndexViewModel
@{
    ViewBag.Title = "Home Page";
}
@foreach (AspNetMvcHomework1.Models.Article article in Model.ArticleList.Articles)
{
    <article>
        <header class="articleHeader text-center">
            <span class="articleTitle">@article.Topic</span>
        </header>
        <p class="articlePublished">Published at: @article.PublishedAt</p>
        <hr />
        <div class="articleBody text-justify">
            <p><small>@article.ShortDescription</small></p>
            @if (article.Content.Length > 200)
            {
                <p>
                    @article.Content.Substring(0, 200) . . . .
                </p>
                using (Html.BeginForm("Article", "Home"))
                {
                    <div>@Html.Hidden("articleID", article.ArticleID)</div>
                    <p> <input type="submit" value="More" class="btn btn-warning" /> </p>
                }
            }
        </div>
    </article>
}
@if (Model.PageInfo.TotalPages > 1)
{
<div class="btn-group">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { page = x }))
</div>
}