<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="d-flex w-100 bg-primary justify-content-around" id="head">
        <img class="float-left logo rounded-circle" src="~/Content/Images/Logo.png" alt="Logo" />
        <h1>Blog</h1>
    </header>
    <section class="row mainPart">
        <main class="col-8 col-lg-10 bg-light">
        @RenderBody()
        </main>
        <menu class="col-4 col-lg-2 bg-primary nav flex-column">
            @Html.ActionLink("Main", "Index")
            @Html.ActionLink("Guest", "Guest")
            @Html.ActionLink("Worksheet", "Worksheet")
        </menu>
    </section>
    <footer class="row justify-content-center bg-primary">
        <p>&copy; Copyright 2019</p>
        <p><a href="#head" class="rounded">Back to top</a></p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
