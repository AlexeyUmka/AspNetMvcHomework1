<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Libre+Baskerville|Permanent+Marker&display=swap" rel="stylesheet">
</head>
<body>
    <header class="d-flex w-100 bg-primary justify-content-around" id="head">
        <img class="float-left logo rounded-circle" src="~/Content/Images/Logo.png" alt="Logo" />
        <h1>Ricardo's Blog</h1>
    </header>
    <section class="row mainPart">
        <main class="col-12 col-md-8 col-lg-10">
            @RenderBody()
        </main>
        <menu class="col-12 col-md-4 col-lg-2 bg-primary nav flex-column">
            @Html.ActionLink("Main", "Index")
            @Html.ActionLink("Guest", "Guest")
            @Html.ActionLink("JOIN?)", "Worksheet")
            @if (ViewBag.CurrentAction == "Home/Index")
            {
                @Html.Partial("Votings")
            }
            <div class="bg-secondary votingResults">
                <h3>Voting Results:</h3>
                @Html.Partial("VotingResults", ViewBag.ElementsOfVoteSystemList as AspNetMvcHomework1.Models.VoteSystem.ElementsOfVoteSystemList)
            </div>
        </menu>
    </section>
    <footer class="row justify-content-center bg-primary">
        <p>&copy; Copyright 2019</p>
        <p><a href="#head" class="rounded">Back to top</a></p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        var menu = document.querySelector(".mainPart menu");
        
        setInterval(MenuPosition, 100);
        function MenuPosition() {
            if (window.innerWidth < 768)
                menu.classList.add("smallscreenMenu");
            else
                menu.classList.remove("smallscreenMenu");
        }
    </script>
</body>
</html>
